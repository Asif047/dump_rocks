                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#0d0d0d" />

                <TextView
                    android:id="@+id/textview_work_responsibility_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Working as an android developer.

Currently engaged with two projects- DeliMan and NoteMe."
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:id="@+id/joining_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Joining Date"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#0d0d0d" />

                <TextView
                    android:id="@+id/textview_joining_date_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="28.10.2017"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginBottom="100dp"
                    />



            </LinearLayout>



        </ScrollView>

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_add_idea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:layout_anchorGravity="bottom|right|end"

        android:src="@drawable/icon_edit"
        />


</android.support.design.widget.CoordinatorLayout>
