                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:layout_marginBottom="100dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_who"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/asif"
                    android:layout_gravity="center"
                    />


                <TextView
                    android:id="@+id/textview_name_who"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="S. M. Asif Ul Haque"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    />


                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#0d0d0d" />

                <TextView
                    android:id="@+id/textview_email_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="asif@rokomari.com"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#0d0d0d" />

                <TextView
                    android:id="@+id/textview_phone_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01677190809"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="300dp"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#0d0d0d" />

                <TextView
                    android:id="@+id/textview_address_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Noyatola, Moghbazar, Dhaka."
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/hometown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
