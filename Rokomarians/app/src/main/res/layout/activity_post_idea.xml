<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cbc_app_poc.rokomari.rokomarians.IdeaBox.PostIdeaActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"
        android:id="@+id/linearLayout">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"

            android:src="@drawable/ic_idea"
            android:layout_marginTop="10dp"
            />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittext_layout"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"



                >

                <EditText
                    android:id="@+id/edittext_title_idea"
                    android:layout_width="300dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dp"
                    android:hint="Title"
                    android:textColor="#000000"

                    />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_layout"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                >

                <EditText
                    android:id="@+id/edittext_idea"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:gravity="top|left"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:lines="20"
                    android:minLines="5"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:layout_marginRight="10dp"

                    android:hint="Write idea"

                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>




    </LinearLayout>


    <Button
        android:id="@+id/button_add_idea"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Add Idea"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
