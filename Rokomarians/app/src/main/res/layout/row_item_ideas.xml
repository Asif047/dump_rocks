<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ffffff"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp"
            card_view:cardUseCompatPadding="true"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                //aaaa
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageview_rokomarian_idea"

                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/asif"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        >

                        <TextView
                            android:id="@+id/textview_name_idea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Asif"

                            android:textSize="20dp"
                            />

                        <TextView
                            android:id="@+id/textview_date_idea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="23.01.2018"

                            android:textSize="17dp"
                            android:textStyle="italic"
                            />



                    </LinearLayout>


                </LinearLayout>

                //aaa


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"

                    android:layout_margin="10dp"
                    android:background="#0d0d0d" />


                <TextView
                    android:id="@+id/textview_title_idea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Culture App"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textview_details_idea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/idea"
                    android:gravity="center"

                    android:textSize="17dp"
                    android:layout_margin="10dp"


                    />


            </LinearLayout>








        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>